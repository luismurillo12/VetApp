<!DOCTYPE html>
<html lang="es">
<head>
    <meta content="Content-type: text/html; charset=UTF-8" />
    <title>Veterinaria San Martín de Porras</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- App css -->
    <link href="~/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />


    <!-- Plugin css -->
    <link href="~/libs/fullcalendar/main.min.css" rel="stylesheet" type="text/css" />
    <link href="~/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />
    <link href="~/libs/dropify/css/dropify.min.css" rel="stylesheet" type="text/css" />

    <!-- icons -->
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />

    <link href="~/libs/select2/css/select2.min.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


</head>

<!-- body start -->
<body class="loading" data-layout-color="light" data-layout-mode="default" data-layout-size="fluid" data-topbar-color="light" data-leftbar-position="fixed" data-leftbar-color="light" data-leftbar-size='default' data-sidebar-user='true'>

    <!-- Begin page -->
    <div id="wrapper">

        <!-- Topbar Start -->
        <div class="navbar-custom" style="background-color: #38BEEF;">
            <ul class="list-unstyled topnav-menu float-end mb-0">

                <li class="dropdown notification-list topbar-dropdown">
                    <a class="nav-link dropdown-toggle nav-user me-0 waves-effect waves-light" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                        <i class="dripicons-gear" style="font-size: 20px; color: black;"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end profile-dropdown">
                        <a href="@Url.Action("CloseSession","Home")" class="dropdown-item notify-item">
                            <i class="fe-lock"></i>
                            <span>Cerrar Sesión</span>
                        </a>
                    </div>
                </li>




            </ul>

            <!-- LOGO -->
            <div class="logo-box" style="background-color: #38BEEF; position: relative;">
                <a href="#" class="logo logo-dark text-center">
                    <span class="logo-lg" style="position: relative; top: -65px;">
                        <img src="~/images/companies/logo.png" alt="" width="220" height="190">
                    </span>
                </a>
            </div>



            <div class="clearfix"></div>

        </div>
        <!-- end Topbar -->
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left-side-menu" >

            <div class="h-100" data-simplebar>

                <!-- User box -->
                <div class="user-box text-center">
                    @if (!String.IsNullOrEmpty(Context.Session.GetString("UserPicture")))
                    {
                        <img src="~/@Context.Session.GetString("UserPicture")" alt="user-img" title="Mat Helme" class="rounded-circle img-thumbnail avatar-md">
                    }
                    else
                    {
                        <img src="~/UsersPictures/NonProfile/NonProfile.png" alt="user-img" title="Mat Helme" class="rounded-circle img-thumbnail avatar-md">
                    }
                    
                    <div class="dropdown">
                        <a class="user-name dropdown-toggle h5 mt-2 mb-1 d-block" data-bs-toggle="dropdown" aria-expanded="false">@Context.Session.GetString("UserNickName")</a>

                    </div>

                    <p class="text-muted left-user-info">@Context.Session.GetString("RolName")</p>

                </div>

                <!--- Sidemenu -->
                <div id="sidebar-menu">

                    <ul id="side-menu">

                        <li class="menu-title">Utilidades</li>
                        @if (Context.Session.GetInt32("UserIdRol") == 1 || Context.Session.GetInt32("UserIdRol") == 3)
                        {
                            <li>
                                <a href="@Url.Action("Forms","Forms")">
                                    <i class="fas fa-book"></i>
                                    <span> Planilla </span>
                                </a>
                            </li>


                            <li>
                                <a href="@Url.Action("Client","Client")">
                                    <i class="fas fa-address-book"></i>.
                                    <span> Clientes </span>
                                </a>
                            </li>
                        }
                        
                        @if (Context.Session.GetInt32("UserIdRol") == 1)
                        {
                            <li>
                                <a href="@Url.Action("Employee","Administration")">
                                    <i class="ti-user"></i>.
                                    <span> Empleado </span>
                                </a>
                            </li>
                        }
                        
                        @if (Context.Session.GetInt32("UserIdRol") == 1 || Context.Session.GetInt32("UserIdRol") == 3)
                        {
                            <li>
                                <a href="@Url.Action("Appointment","Appointment")">
                                    <i class="ti-calendar"></i>.
                                    <span> Citas </span>
                                </a>
                            </li>

                            <li>
                                <a href="#email" data-bs-toggle="collapse">
                                    <i class="ti-credit-card"></i>.
                                    <span> Transacción </span>
                                    <span class="menu-arrow"></span>
                                </a>
                                <div class="collapse" id="email">
                                    <ul class="nav-second-level">
                                        <li>
                                            <a href="@Url.Action("Payment","Payment")">
                                                <i class="fe-dollar-sign"></i>
                                                <span> Cobro </span>
                                            </a>
                                        </li>
                                        @* <li>
                                            <a href="@Url.Action("CierreCaja","Transaccion")">
                                                <i class="fas fa-key"></i>
                                                <span> Cierre de Caja </span>
                                            </a>
                                        </li> *@
                                    </ul>
                                </div>
                            </li>
                        }

                        
                        @if (Context.Session.GetInt32("UserIdRol") == 1 || Context.Session.GetInt32("UserIdRol") == 2)
                        {
                            <li>
                                <a href="#sidebarTasks" data-bs-toggle="collapse">
                                    <i class="ti-shopping-cart"></i>.
                                    <span> Insumos </span>
                                    <span class="menu-arrow"></span>
                                </a>
                                <div class="collapse" id="sidebarTasks">
                                    <ul class="nav-second-level">
                                        <li>
                                            <a href="@Url.Action("Supplier","Supplier")">
                                                <i class="fe-truck"></i>
                                                <span> Proveedores </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Service","Service")">
                                                <i class="dripicons-cart"></i>
                                                <span> Servicios </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        }
                        @if (Context.Session.GetInt32("UserIdRol") == 1)
                        {
                            <li>
                                <a href="#reports" data-bs-toggle="collapse">
                                    <i class="dripicons-folder-open"></i>.
                                    <span> Reportes </span>
                                    <span class="menu-arrow"></span>
                                </a>
                                <div class="collapse" id="reports">
                                    <ul class="nav-second-level">
                                        <li>
                                            <a href="@Url.Action("ReporteCitas","Reportes")">
                                                <i class="fe-clipboard"></i>
                                                <span> Reporte de Citas </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("ReporteCreditos","Reportes")">
                                                <i class="fe-clipboard"></i>
                                                <span> Reporte de Créditos </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("ReportePLanilla","Reportes")">
                                                <i class="fe-clipboard"></i>.
                                                <span> Reporte de Planilla </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("ReporteTransacciones","Reportes")">
                                                <i class="fe-clipboard"></i>
                                                <span> Reporte de Transacciones </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        }
                        

                    </ul>

                </div>
                <!-- End Sidebar -->

                <div class="clearfix"></div>

            </div>
            <!-- Sidebar -left -->

        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start Page Content here -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->
        @RenderBody()

    </div>
    <!-- END wrapper -->
    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>

    <!-- Vendor -->
    <script src="~/libs/jquery/jquery.min.js"></script>
    <script src="~/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/libs/simplebar/simplebar.min.js"></script>
    <script src="~/libs/node-waves/waves.min.js"></script>
    <script src="~/libs/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/libs/jquery.counterup/jquery.counterup.min.js"></script>
    <script src="~/libs/feather-icons/feather.min.js"></script>

    <!-- third party js -->
    <script src="~/libs/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/libs/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/libs/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/libs/datatables.net-responsive-bs5/js/responsive.bootstrap5.min.js"></script>
    <script src="~/libs/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/libs/datatables.net-buttons-bs5/js/buttons.bootstrap5.min.js"></script>
    <script src="~/libs/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/libs/datatables.net-buttons/js/buttons.flash.min.js"></script>
    <script src="~/libs/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/libs/datatables.net-keytable/js/dataTables.keyTable.min.js"></script>
    <script src="~/libs/datatables.net-select/js/dataTables.select.min.js"></script>
    <script src="~/libs/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/libs/pdfmake/build/vfs_fonts.js"></script>




    <!-- Table Editable plugin-->
    <script src="~/libs/jquery-tabledit/jquery.tabledit.min.js"></script>

    <!-- Table editable init-->
    <script src="/js/pages/tabledit.init.js"></script>

    <!-- plugin js -->
    <script src="~/libs/moment/min/moment.min.js"></script>
    <script src="~/libs/fullcalendar/main.min.js"></script>
    <script src="~/libs/dropzone/min/dropzone.min.js"></script>
    <script src="~/libs/dropify/js/dropify.min.js"></script>

    <!-- Calendar init -->
    <script src="~/js/pages/calendar.init.js"></script>

    <!-- Datatables init -->
    <script src="~/js/pages/datatables.init.js"></script>
    @*     <script charset="utf-8" src="~/js/Administration/Administration.js"></script> *@
    @*<script src="~/js/Pet/Pet.js"></script>*@

    <!-- Init js-->
    <script src="~/js/pages/form-fileuploads.init.js"></script>

    <!-- App js -->
    <script src="~/js/app.min.js"></script>


</body>
</html>