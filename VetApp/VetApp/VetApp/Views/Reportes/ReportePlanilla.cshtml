<div class="content-page">
	<div class="content">

		<!-- Start Content-->
		<div class="container-fluid">

			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-body">
							<div class="row">
								@using (Html.BeginForm("ReportePlanilla", "Reportes", FormMethod.Post, new { @class = "pt-3" }))
								{
									<div class="row">
										<div class=" col-md-4">
											<label for="inputZip" class="form-label">Fecha Inicio</label>
											<input class="form-control" type="date" name="startDate" id="startDate" />
										</div> <!-- end col -->
										<div class=" col-md-4">
											<label for="inputZip" class="form-label">Fecha Fin</label>
											<input class="form-control" type="date" name="endDate" id="endDate" />
										</div> <!-- end col -->
									</div>
									<label class="form-label" style="color:red;">@ViewBag.Message</label>
									<br />
									<input type="submit" class="btn btn-block btn-primary" value="Generar reporte">
								}
							</div>
							<br />

							@if (ViewBag.FormReport != null)
							{

								<table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap">
									<thead>
										<tr>
											<th>Expediente Médico</th>
											<th>Médico</th>
											<th>Paciente</th>
											<th>Especie</th>
											<th>Cedula</th>
											<th>Consulta</th>
											<th>Hora Llegada</th>
											<th>Hora Atención</th>
											<th>Laboratorio</th>
											<th>Consulta Externa</th>
											<th>Estado</th>
										</tr>
									</thead>
									<tbody>
										@foreach (var report in ViewBag.FormReport)
										{
											<tr>
												<td>@report.idMedicalRecord</td>
												<td>@report.doctorName</td>
												<td>@report.petName</td>
												<td>@report.petSpecies</td>
												<td>@report.clientIdCard</td>
												<td>@report.motive</td>
												<td>@report.arrivalHour</td>
												@if (@report.attentionHour == "12:00 AM")
												{
													<td></td>
												}
												else
												{
													<td>@report.attentionHour</td>
												}
												<td>@report.product</td>
												<th>@report.serviceName</th>
												@if (@report.statusP)
												{
													<td><span class="badge bg-success rounded-pill float-start mt-3">Pagado</span></td>
												}
												else
												{
													<td><span class="badge bg-secondary">Sin Cobrar</span></td>
												}
											</tr>
										}

									</tbody>
								</table>
							}

						</div>
					</div>

				</div>
			</div>
			<!-- end row -->






		</div>
	</div>

	<!-- ============================================================== -->
	<!-- End Page content -->
	<!-- ============================================================== -->

</div>